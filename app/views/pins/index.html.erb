<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Listing pins</h1>
    </div> <!-- end panel title -->
  </div> <!-- end panel heading -->

<div class="panel-body">
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User</th>
      <th>show</th>
      <th>edit</th>
      <th>destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url (:medium) %></td>
        <td><%= link_to pin.description, pin %></td>
        <!-- <td><%= pin.user.email %></td> -->
        <td><%= link_to 'Show', pin %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin) %></td>
          <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %> <!-- end block pins each -->
  </tbody>
</table>

<br>
</div> <!-- end panel body -->
<% if user_signed_in? %>
<div class="panel-footer">
  <%= link_to 'New Pin', new_pin_path %>
</div> <!-- end panel footer -->
<% end %>
</div> <!-- end panel -->

